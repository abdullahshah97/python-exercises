magics = ['Alice','Bob','Carl','Derek','Ethan','Fred','Georgina','Hannah']
message = 'that was a great trick!\n'
for magic in magics:	#For each element in magics, store it in variable magic
	print(magic+' '+message)
print('Thanks for coming everyone. That was a great magic show!\n')

#Chapters exercises
pizzas = ['Tandoori','Spicy','Vegan']
for pizza in pizzas:
	print('I like '+pizza+' pizza')
print('I really love pizza\n')

animals = ['Dog','Cat','Mouse']
for animal in animals:
	print('A '+animal+' would make a great pet')
print('They all have 4 legs')

for value in range(1,21):
	print(value)

millions = range(1,1000001)
print(min(millions))
print(max(millions))
print(sum(millions))

odd_numbers = range(1,20,2)
for value in odd_numbers:
	print(value)

threes = [value*3 for value in range(1,11)] #List comprehension
print (threes)

numbers = range(1,11)
for number in numbers:
	print(number**3)

numbers = [number**3 for number in range(1,11)]
print(numbers)

#Using slices in lists
print('The first 3 items in the list are: ' + str(magics[:3]))
print('The middle 3 items in the list are: ' + str(magics[3:6]))
print('The last 3 items in the list are: ' + str(magics[-3:]))

friends_pizzas = pizzas[:]
friends_pizzas.append('Beefy')
pizzas.append('Pepperoni')

print('My favourite pizzas are: ')
for pizza in pizzas:
	print(pizza)
print('My friends favourite pizzas are: ')
for pizza in friends_pizzas:
	print(pizza)

buffet = ('Karahi','Lamb','Biryani')
for food in buffet:
	print(food)
buffet = ('Biryani','Handi','Plou')
for food in buffet:
	print(food)
